\usepackage[linguistics]{forest}
\usepackage{lipsum}
\tcbuselibrary{skins, breakable}
\tcbuselibrary{xparse}

% Source - https://tex.stackexchange.com/questions/678104/how-can-i-make-these-specific-modifications-using-tcolorbox
% For tcolorbox syntax, see - https://gist.github.com/twhyntie/30ef65b696869f86bf740697ecba7c1c
\definecolor{ChapterBackground}{HTML}{101010}
\definecolor{ChapterForeground}{HTML}{e93820}
\definecolor{CoverForeground}{HTML}{ee0000}

\newtcolorbox{statement}[2][]{%
    enhanced,
    skin first = enhanced,
    skin middle = enhanced,
    skin last = enhanced,
    breakable,
    boxrule = 0pt,
    frame hidden,
    borderline west = {4pt}{0pt}{ChapterBackground},
    colback = CoverForeground!10,
    coltitle = ChapterForeground!85,
    sharp corners,
    rounded corners = southeast,
    rounded corners = northeast,
    arc is angular,
    arc = 3mm,
    attach boxed title to top left,
    boxed title style = {%
        enhanced,
        colback = ChapterBackground,
        colframe = ChapterBackground,
        top = 0pt,
        bottom = 0pt,
        sharp corners,
        rounded corners = northeast,
        arc is angular,
        arc = 2mm,
        rightrule = 0pt,
        bottomrule = 0pt,
        toprule = 0pt,
    },
    fonttitle = \bfseries,
    % overlay unbroken = {%
    %     \node[anchor=west, color=black!70] at (title.east) {#1};
    % },
    % overlay first = {%
    %     \node[anchor=west, color=black!70] at (title.east) {#1};
    %     \path[fill = tcbcolback!80!black]
    %         ([yshift = 3mm]interior.south east) -- ++(-0.4,-0.2) -- ++(0.1,-0.2);
    % },
    overlay middle = {%
        \path[fill = tcbcolback!80!black]
            ([yshift = -3mm]interior.north east) -- ++(-0.4,0.2) -- ++(0.1,0.2);
        \path[fill = tcbcolback!80!black]
            ([yshift = 3mm]interior.south east) -- ++(-0.4,-0.2) -- ++(0.1,-0.2);
    },
    overlay last = {%
        \path[fill = tcbcolback!80!black]
            ([yshift = -3mm]interior.north east) -- ++(-0.4,0.2) -- ++(0.1,0.2);
    },
  title=#2,
  #1,
}
